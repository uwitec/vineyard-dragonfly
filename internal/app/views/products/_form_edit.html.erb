<%= form_tag("/products/", :method => "put", :id => "product_eidt_form", :class => "form") do %>
	<p class="notice">
	<% if flash[:notice] != nil %>
		<img src="/assets/error_01.png">&nbsp;<%= flash[:notice] %>
	<% end %>
	</p>
	<div class="field_name">
		<span><%= label_tag :edit_name, '名称' %><em>*</em></span>
		<%= text_field_tag :edit_name, '', :class => "text required", :maxlength => "32", :style => "width: 200px; margin-left: 33px;" %>
	</div>
	<div class="field_name">
		<span><%= label_tag :edit_price, '单价' %><em>*</em></span>
		<%= text_field_tag :edit_price, '', :class => "number required", :maxlength => "10", :size => 10, :style => "width: 80px;" %>
		<span style="margin-left: 10px;">￥</span>
	</div>
	<div class="field_name">
		<span><%= label_tag :edit_expiration, '有效期至' %><em>*</em></span>
		<%= text_field_tag :edit_expiration, '', :class => "text required", :size => 10, :style => "width: 100px;", :readyonly => true %>
	</div>
	<div class="actions">
		<%= submit_tag "更新", :class => 'create_button', :id => 'update_product_button'%>
		<%= submit_tag "删除", :class => 'create_button', :id => 'destroy_product_button'%>
	</div>
<% end %>



