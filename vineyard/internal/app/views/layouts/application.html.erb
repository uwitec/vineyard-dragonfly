<!DOCTYPE html>
<html>
<head>
  <title>葡萄庄园（管理端）</title>
  <%= stylesheet_link_tag    "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
<div id="head_wrap">
		<div id="logo_bar">
			<h1 class="logo_detail">葡萄庄园 Vineyard</h1>
		</div>
		<div id="navigation">
			<ul class="navi_list fl">
			<% if flash[:notice] != nil %>
				<li style="color: white; font-weight: bold; padding-left: 10px;"><%= flash[:notice] %></li>
			<% end %>
			<% if session[:admin_id] != nil %>
				<li>
					<span class="login_info" style="margin-left: 10px;"><%=session[:admin_id] %></span>
				</li>
				<li>
					<a class="import c" style="padding: 2px 8px 3px;" href="/alogout">退出</a>
				</li>
			<% else %>
				<li>
				<%= link_to "登陆", new_admin_url, :class => "import c", :style => "padding: 2px 8px 3px;"%>
				</li>
			<% end %>
			</ul>
		</div>
		<div id="head_bottom"></div>
	</div>
	<div id="body_wrap">
		<div id="left_body">
			<div class="piece250">
				<div class="piece_hd">
				</div>
				<div class="piece_bd">
					<ul class="vertical" style="margin-bottom: 10px;">
						<li class="level1_title">
						<span>管理城市</span>
						</li>
						<li class="level2_title">
							<a href="##">已开发的市场</a>
						</li>
						<li class="level2_title">
							<a href="##">新开发市场</a>
						</li>
					</ul>
					<ul class="vertical">
						<li class="level1_title">
						<span>管理庄园</span>
						</li>
						<li class="level2_title">
							<a href="/products">已收录的宝贝</a>
						</li>
						<li class="level2_title">
							<a href="/products/new">添加宝贝</a>
						</li>
					</ul>
					<ul class="vertical">
						<li class="level1_title">
						<span>安全中心</span>
						</li>
						<li class="level2_title">
						</li>
					</ul>
				</div>
				<div class="piece_ft">
				</div>
			</div>
		</div>
		<div id="right_body">
			<%= yield %>
		</div>
		<div id="foot_wrap"></div>
	</div>
</body>
</html>
