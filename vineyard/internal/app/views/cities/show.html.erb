<div class="piece690">
	<div class="piece_hd2"></div>
	<div class="piece_bd2">	
		<div id="city_register_form">
			<div class="city_name">
				<label>城市:</label>
				<label class="key_words"><%= @city.name %></label>
			</div>
			<div class="city_available">
				<label>状态:</label>
				<% if @city.available %>
					<label class="open">业务开发中</label>
				<% else %>
					<label class="close">业务已关闭</label>
				<% end %>
			</div>
			<div class="control_bar">
				<%= link_to '编辑', edit_city_path(@city) %>
				<%= link_to '删除', @city, confirm: '确定要删除吗？', method: :delete %>
				<%= link_to '所有城市', cities_path%>
			</div>
		</div>
	</div>
	<div class="piece_ft2"></div>
</div>


<%= javascript_include_tag "application" %>
