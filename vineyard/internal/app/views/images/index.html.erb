<div class="piece690">
	<div class="piece_hd2"></div>
	<div class="piece_bd2">
		<div id="images_upload_form">
			<%= render 'form' %>
		</div>
		<div class="clear"></div>	
		<div class="control_bar" style="margin-left: 0px;">
			<%= link_to "查看宝贝", product_path(@product) %>
			<%= link_to "所有宝贝", products_path %>
		</div>	
		<div class="thumb-imgs">
			<ul class="ui-uploader-thumbImages ui-uploader-sorter">
			<% @product.images.each do |image| %>
				<li class="ui-uploader-inProgress">
				<div class="ui-uploader-content">
					<a href="##" name="<%= image.product_id %>::<%= image.id %>" class="image_destroy_link ui-uploader-close"></a>
					<%= image_tag("grey.gif","data-original" => image.upload.thumb.url, :class => "lazy thumb") if image.upload? %>
				</div>
				<div class="ui-uploader-bar">
					<a href="###" class="ui-uploader-sorter pull-right">&nbsp;</a>
					<a href="###" class="ui-uploader-sorter pull-left">&nbsp;</a>
					<a href="###" class="ui-uploader-status">封面</a>
				</div>
				</li>
			<% end %>
			</ul>
		</div>
		<div class="clear"></div>
		<div class="control_bar" style="margin-left: 0px; margin-top: 0px;">
			<%= link_to "查看宝贝", product_path(@product) %>
			<%= link_to "所有宝贝", products_path %>
		</div>
	</div>
	<div class="piece_ft2"></div>
</div>

<%= render "form_destroy" %>

<%= javascript_include_tag "application" %>
